<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>User info app</title>

    <link rel="stylesheet" href="/stylesheets/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/fonts.css">
    <link rel="stylesheet" href="/stylesheets/book_viewer.css">
</head>

<body>

  <div id="layout">
      <a href="#menu" id="menuLink" class="menu-link">
          <span></span>
      </a>

      <div id="menu">
          <div class="pure-menu">
              <a class="pure-menu-heading" href="/">Users</a>

              <ul class="pure-menu-list">
                <% @users.keys.each do |user| %>
                  <li class="pure-menu-item">
                    <a href="/<%= user %>" class="pure-menu-link">
                      <%= capitalize(user) %>
                    </a>
                  </li>
                <% end %>
              </ul>
          </div>
      </div>

      <div id="main">
        <div class="header">
          <h1>Users info</h1>
        </div>

        <div class="content">
          <%= yield %>
          <p>There are <%= user_count %> users with a total of <%= interests_count %> interests.</p>
        </div>
      </div>
  </div>
  
  <script type="text/javascript" src="/javascripts/ui.js"></script>
</body>
</html>
